@model IEnumerable<BariiLiii.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Patients" asp-action="Index" method="get">
    <label>  Patient Id:<input type="text" name="PatientId" /></label>
    <label>  Patient Name:<input type="text" name="FullName" /></label>
    <label>  Patient Gender:<input type="text" name="Gender" /></label>
    <label>  Patient Location:<input type="text" name="Location" /></label>

    <button type="submit" class="btn btn-outline-success">
        Filter
    </button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PatientId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PatientId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PatientId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>