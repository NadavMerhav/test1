@model IEnumerable<HealthForYou.Models.MedicalTeam>

@using Microsoft.AspNetCore.Identity
@using HealthForYou.Areas.Identity.Data
@inject SignInManager<HealthForYouUser> SignInManager
@inject UserManager<HealthForYouUser> UserManager
@{
}
<div class="text-center">
    <h1 class="display-4">Welcome @UserManager.GetUserName(User)</h1>
    <p></a>Here you can reserve a new appoitment. Please Choose the department you need :</p>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <p><img src="~/Images/550_shutterstock_269923772.jpg" style=" height:250px;width:250px;" /></p>
                    <h5 class="card-title">General medicine </h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <form asp-controller="MedicalTeams" asp-action="FamilyDoctors" method="get">
                    
                        <button type="submit" class="btn btn-outline-primary" name="Expertise" value="Family">
                            Family Doctors
                        </button>
                    </form>                </div>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <p><img src="/Images/123008025-female-derma-rejuvenate-treatment-doctor-in-gloves-touch-woman-face-cosmetology-pretty-portrait-faci.jpg" style=" height:250px;width:250px;" /></p>
                    <h5 class="card-title">Facial medicine </h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <form asp-controller="MedicalTeams" asp-action="PlasticDoctors" method="get">
                        <button type="submit" class="btn btn-outline-primary" name="Expertise" value="facialTreatment">
                            PlasticDoctors
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
