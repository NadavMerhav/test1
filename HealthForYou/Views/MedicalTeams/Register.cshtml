@model HealthForYou.Models.MedicalTeam

@using Microsoft.AspNetCore.Identity
@using HealthForYou.Areas.Identity.Data
@inject SignInManager<HealthForYouUser> SignInManager
@inject UserManager<HealthForYouUser> UserManager
@{

}

<div class="card" style="height: 300px ;width:300px; text-align:center">
    <div class="card-body">
        
        @*code for add a picture*@
        <img src="/Images/doctor-hospital-shakes-hand-with-another-doctor_31965-1095.jpg" style="height:250px;width:250px" />
        <h1> Thank you @UserManager.GetUserAsync(User).Result.fullname For your appointment!</h1>
        <br />
        <h4>Appoitment location: @Html.DisplayFor(modelitem => modelitem.Location) </h4>

        <br />
        <div class="container">
            <iframe width="400" height="400"
                    src="https://maps.google.com/maps?q=@Html.DisplayFor(model=>model.Location)&t=&z=13&ie=UTF8&iwloc=&output=embed"
                    frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
        </div>
    </div>
</div>